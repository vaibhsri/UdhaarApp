<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/klyjqnws"
    android:orientation="vertical"
    tools:context="com.example.vaibhav.udhaar.Main4Activity">

    <TextView
        android:id="@+id/currentinv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_bold_italic"
        android:paddingVertical="@dimen/activity_vertical_margin"
        android:text="Your Current Investments"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="30dp"
        android:textStyle="italic" />

    <ListView
        android:id="@+id/ListView2"
        android:layout_width="match_parent"
        android:layout_height="394dp"></ListView>

    <Button
        android:id="@+id/paidback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/holo_green_light"
        android:elevation="0dp"
        android:fontFamily="@font/roboto_bold_italic"
        android:text="I have been paid back"
        android:textAlignment="center"
        android:textColor="@android:color/white" />

</LinearLayout>
